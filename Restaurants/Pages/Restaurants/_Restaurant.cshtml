@using Core

@model RestaurantClass

<div class="card mt-3">
  <div class="card-body">
      <h5 class="card-title">@Model.Name</h5>
      <h6 class="card-subtitle mb-2 text-muted"><i class="fas fa-map-marker-alt"></i> @Model.Location</h6>
      <p class="card-text">Cuisine: @Model.Cuisine</p>
  </div>
  <div class="card-footer">
      <a class="btn btn-default" asp-page="./Detail" asp-route-restaurantId="@Model.ID"><i class="fas fa-info-circle text-primary"></i></a>
      <a class="btn btn-default" asp-page="./Edit" asp-route-restaurantId="@Model.ID"><i class="fas fa-edit text-primary"></i></a>
      <a class="btn btn-default" asp-page="./Delete" asp-route-restaurantId="@Model.ID"><i class="fas fa-trash-alt text-danger"></i></a>
  </div>
</div>